@model IEnumerable<WebShop.Core.Models.Product>

@{
    ViewBag.Title = "Admin - Products ";
}

<h2>Admin - Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Availability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colour)
        </th>
        <th></th>
    </tr>


  @foreach (var item in Model) {
      <tr>
          <td>
              @Html.DisplayFor(modelItem => item.CreateAt)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Name)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Description)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Manufacture)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Price)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Category)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.SubCategory)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Availability)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Size)
          </td>
          <td>
              @Html.DisplayFor(modelItem => item.Colour)
          </td>
          <td>
              @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
              @Html.ActionLink("Details", "Details", new { id=item.Id }) |
              @Html.ActionLink("Delete", "Delete", new { id=item.Id })
          </td>
      </tr>
  }

</table>
